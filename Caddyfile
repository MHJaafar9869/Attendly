{
	frankenphp
	order php_server before file_server
}

:80 {
	root * /var/www/html/public
	encode zstd br gzip

	@static {
		file
		path_regexp static \.(css|js|png|jpg|jpeg|svg|gif|webp|ico|txt|woff2?)$
	}
	handle @static {
		header Cache-Control "public, max-age=86400"
		file_server
	}

	try_files {path} /index.php?{query}

	php_server

	file_server
}
